{
	"compilerOptions": {
		"typeRoots": ["node_modules/@types", "./src/types"],
		"esModuleInterop": true,
		"strict": true,
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
